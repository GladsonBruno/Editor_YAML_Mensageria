{
  "name": "configurador_mensageria",
  "version": "1.0.4",
  "description": "Software Fazer alterações em arquivos YML da Mensageria graficamente.",
  "author": "Gladson Bruno",
  "license": "Apache-2.0",
  "main": "main.js",
  "build": {
    "appId": "com.example.configuradorMensageriaArkhi",
    "productName": "EditorVisualYML",
    "publish": [
      {
        "provider": "github",
        "repo": "Editor_YAML_Mensageria",
        "owner": "GladsonBruno"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icons/win/icon.ico"
    },
    "nsis": {
      "installerIcon": "assets/icons/win/icon.ico",
      "uninstallerIcon": "assets/icons/win/icon.ico",
      "license": "LICENSE",
      "runAfterFinish": true,
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    },
    "portable": {
      "requestExecutionLevel": "user"
    },
    "linux": {
      "category": "Utils",
      "icon": "assets/icons/linux",
      "packageCategory": "utils",
      "maintainer": "Gladson Bruno",
      "target": [
        {
          "target": "rpm",
          "arch": [
            "ia32",
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ],
      "synopsis": "Software Fazer alterações em arquivos YML da Mensageria graficamente."
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ]
    },
    "rpm": {
      "depends": [
        "GConf2",
        "libnotify",
        "nss",
        "libindicator7",
        "libappindicator",
        "libXtst"
      ]
    },
    "snap": {
      "publish": [
        {
          "provider": "bintray",
          "package": "Editor-YAML-Mensageria",
          "repo": "Editor-YAML-Mensageria-Snap",
          "user": "gladson",
          "owner": "gladson"
        }
      ],
      "artifactName": "Configurador_Mensageria_${version}.${ext}",
      "confinement": "strict",
      "summary": "Software Fazer alterações em arquivos YML da Mensageria graficamente.",
      "grade": "stable",
      "buildPackages": [],
      "stagePackages": [
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3",
        "libxss1",
        "fontconfig-config",
        "gconf2",
        "libasound2",
        "pulseaudio"
      ],
      "plugs": [
        "default"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "identity": null,
      "icon": "assets/icons/mac/icon.icns",
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "icon": "assets/icons/mac/icon.icns",
      "iconSize": 100,
      "window": {
        "width": 544,
        "height": 408
      },
      "contents": [
        {
          "x": 145,
          "y": 257
        },
        {
          "x": 400,
          "y": 255,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "scripts": {
    "pack": "build --dir",
    "dist": "build -- arch all",
    "postinstall": "install-app-deps",
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 0"
  },
  "dependencies": {
    "cryptlib": "^1.0.3",
    "jquery": "^3.6.0",
    "js-yaml": "^3.14.1",
    "json2yaml": "^1.1.0",
    "material-icons": "^0.2.3",
    "materialize-css": "^1.0.0-beta",
    "write-yaml": "^1.0.0"
  },
  "devDependencies": {
    "7zip-bin": "^3.1.0",
    "devtron": "^1.4.0",
    "electron": "^2.0.0-beta.7",
    "electron-builder": "^23.6.0",
    "electron-debug": "^1.5.0",
    "electron-devtools-installer": "^2.2.3",
    "electron-packager": "^16.0.0",
    "electron-rebuild": "^1.7.3"
  }
}
